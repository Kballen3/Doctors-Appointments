<h1>Add New Doctor</h1>
<%= form_with(model:@doctor, local: true, class: "ui form") do |f| %>
    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, autofocus: true, placeholder: "Name" %>
    </div>

    <div class="field">
        <%= f.label :specialty %>
        <%= f.text_field :specialty, required: true, autofocus: true, placeholder: "Specialty"%>
    </div>
    <%= f.submit nil, class: "ui inverted pink button" %>
<% end %>

