<h1>List of Doctors and Their Specialty</h1>
<%= link_to 'Add Doctor', new_doctor_path %>
<h2><%= @doctors.length <= 0 ? "Not a Doctor" : "" %></h2>
<ul>
    <% @doctors.each do |doctor| %>
        <li>
            <%= link_to doctor.name, doctor %>
            <%= doctor.specialty %>
        </li>
    <% end %>
</ul>
