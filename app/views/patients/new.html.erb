<h1>Add Patient Info</h1>
<%= form_with(model:@patient, local: true, class: "ui form") do |f| %>
    <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, require: true, autofocus: true, placeholder: "First Name" %>
    </div>
    <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, require: true, autofocus: true, placeholder: "Last Name" %>
    </div>
    <%= f.submit nil, class: "ui yellow button inverted" %>
<% end %>

 


